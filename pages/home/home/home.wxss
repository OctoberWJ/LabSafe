/* 直接设置页面背景 */
page{
    background:#f8f8f8;
}
/* 搜索框样式 */
.search{
    width: 730rpx;
	height: 60rpx;
    margin-left: 10rpx;
    border-radius: 14rpx;
	font-size: 28rpx;
	line-height: 150%;
	border: rgba(17, 17, 17, 0.03) solid 2rpx;
	text-align: center;
    color: rgba(17, 17, 17, 1);
	background-color: rgba(255, 255, 255, 1);
    position: relative;
}
